{
    "extends": "airbnb-base",
    "plugins": [
        "babel"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "globals": {
        "__dirname": true
    },
    "rules": {
        "arrow-parens": [2, "as-needed"],
        "indent": [2, 4, {
            "SwitchCase": 1
        }],
        "no-shadow": 0,
        "no-param-reassign": 0,
        "object-curly-newline": 0,
        "function-paren-newline": 0,
        "no-nested-ternary": 0,
        "no-return-assign": [2, "except-parens"],
        "no-unused-expressions": [2, {
            "allowShortCircuit": true
        }],
        "no-plusplus": 0,
        "comma-dangle": [2, "only-multiline"],
        "linebreak-style": [2, "windows"],
        "semi": [2, "never"],
        "consistent-return": 0,
        "no-confusing-arrow": [2, {
            "allowParens": true
        }],
        "max-len": [2, 130],
        "keyword-spacing": [2, {
            "before": true,
            "after": true
        }],
        "object-shorthand": [2, "always"],
        "radix": 0,
        "prefer-destructuring": [2, {
            "object": true,
            "array": false
        }]
    }
}